<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="top"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/edtNumPavimentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:bufferType="editable"
            android:hint="@string/num_pavimentos"
            android:inputType="numberDecimal"
            tools:ignore="Autofill"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/edtNumPessoas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:hint="@string/num_pessoas"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="@id/edtNumPavimentos" />

        <EditText
            android:id="@+id/edtNumCozinha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:hint="@string/num_cozinhas"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="@id/edtNumPessoas" />

        <EditText
            android:id="@+id/edtNumBanheiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:hint="@string/num_banheiros"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="@id/edtNumCozinha" />

        <EditText
            android:id="@+id/edtNumAreaDeServico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:hint="@string/num_area_servico"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="@id/edtNumBanheiro" />

        <Button
            android:id="@+id/btnCtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:background="#DC65F0"
            android:gravity="bottom"
            android:text="@string/btn_ctn"
            android:textColor="#00EDF5F2"
            app:layout_constraintTop_toTopOf="@id/edtNumAreaDeServico" />

    </android.support.constraint.ConstraintLayout>

</layout>